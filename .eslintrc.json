{
  "env": {
    "es2021": true,
    "node": true,
    "browser": false
  },
  "extends": [
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-console": "off",
    "@typescript-eslint/quotes": [
      "error",
      "double"
    ],
    "class-methods-use-this": "off",
    "@typescript-eslint/indent": [
      "error",
      4
    ],
    "no-plusplus": "off",
    "max-len": [
      "error",
      120
    ]
  },
  "ignorePatterns": [
    "jest.config.js"
  ]
}
